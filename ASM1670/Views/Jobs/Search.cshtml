@model IEnumerable<ASM1670.Models.Job>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container-xxl py-5">
    <div class="container">
        <h1 class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">Search Results</h1>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.3s">
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    @if (ViewBag.NoJobs)
							{

								<p style="height:auto">Không có công việc nào được tìm thấy.</p>
							}
							else
							{
                    @foreach (var item in Model)
                    {
                        <div class="job-item p-4 mb-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                    <img class="flex-shrink-0 img-fluid border rounded" src="@Html.DisplayFor(modelItem => item.JobPicture)" alt="" style="width: 80px; height: 80px;">
                                    <div class="text-start ps-4">
                                        <h5 class="mb-3">@Html.DisplayFor(modelItem => item.Title)</h5>
                                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Html.DisplayFor(modelItem => item.Location)</span>
                                        <span class="text-truncate me-3"><i class="far fa-clock me-2 text-primary"></i>Level: @Html.DisplayFor(modelItem => item.ProfessionalQualifications)</span>
                                        <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>$@Html.DisplayFor(modelItem => item.Salary)</span>
                                        <li><i class="fa fa-user" aria-hidden="true"></i>@Html.DisplayFor(modelItem => item.Employer.Profile.FullName)</li>
                                        <li><i class="fa fa-folder" aria-hidden="true"></i>@Html.DisplayFor(modelItem => item.Category.Name)</li>
                                        <li><i class="fa fa-info-circle" aria-hidden="true"></i>@Html.DisplayFor(modelItem => item.Description)</li>

                                        <br /> <br />

                                        @if (User.IsInRole("Admin") || User.IsInRole("Employers"))
                                        {
                                            <span class="btn btn-primary"><a class="function-btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a></span>
                                            <span class="btn btn-danger"><a class="function-btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a></span>


                                        }
                                        <span class="btn btn-info"><a class="function-btn" asp-action="Details" asp-route-id="@item.Id">Details</a></span>

                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                    <div class="d-flex mb-3">
                                        <a class="btn btn-light btn-square me-3" href=""><i class="far fa-heart text-primary"></i></a>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Apply Now</a>
                                    </div>
                                    <small class="text-truncate"><i class="far fa-calendar-alt text-primary me-2"></i>DeadLine: @Html.DisplayFor(modelItem => item.DeadLine)</small>
                                </div>
                            </div>
                        </div>
                    }}
                </div>
            </div>
        </div>
    </div>
</div>
