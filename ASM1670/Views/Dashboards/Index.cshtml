<div class="container" style="margin-top:50px">
	<div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
			<a asp-controller="Categories" asp-action="Index" style="text-decoration:none">
				<div class="col">
					<div class="card radius-10 border-start border-0 border-3 border-info">
						<div class="card-body">
							<div class="d-flex align-items-center">
								<div>
									<p class="mb-0 text-secondary">Category</p>
									<h4 class="my-1 text-info">Category</h4>
									<p style="color:black;" class="mb-0 font-13">View Category</p>
								</div>
								<div class="widgets-icons-2 rounded-circle bg-gradient-scooter text-white ms-auto">
									<i class="fa fa-shopping-cart"></i>
								</div>
							</div>
						</div>
					</div>
				</div>
			</a>
		<a asp-controller="Role" asp-action="RoleManagement" style="text-decoration:none">
		<div class="col">
			<div class="card radius-10 border-start border-0 border-3 border-danger">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div>
							<p class="mb-0 text-secondary">Role </p>
								<h4 class="my-1 text-danger">Role Management</h4>
								<p style="color:black;" class="mb-0 font-13">View User With Role</p>
						</div>
						<div class="widgets-icons-2 rounded-circle bg-gradient-bloody text-white ms-auto">
							<i class="fa fa-dollar"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
		</a>

		<a asp-controller="JobApplications" asp-action="Index" style="text-decoration:none">
		<div class="col">
			<div class="card radius-10 border-start border-0 border-3 border-success">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div>
								<p class="mb-0 text-secondary">Job Applications</p>
								<h4 class="my-1 text-success">Job Application</h4>
								<p style="color:black;" class="mb-0 font-13">View All Jobs Applications </p>
						</div>
						<div class="widgets-icons-2 rounded-circle bg-gradient-ohhappiness text-white ms-auto">
							<i class="fa fa-bar-chart"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
		</a>

		<a asp-controller="Jobs" asp-action="PendingJobs" style="text-decoration:none">
		<div class="col">
			<div class="card radius-10 border-start border-0 border-3 border-warning">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div>
							<p class="mb-0 text-secondary">Jobs</p>
							<h4 class="my-1 text-warning">Pending Jobs</h4>
								<p style="color:black;" class="mb-0 font-13">View All Pending Jobs</p>
						</div>
						<div class="widgets-icons-2 rounded-circle bg-gradient-blooker text-white ms-auto">
							<i class="fa fa-users"></i>
						</div>
					</div>
				</div>
			</div>
		</div>
		</a>
		<div class="row row-cols-1 row-cols-md-2 row-cols-xl-4" style="margin-top: 30px">

		<a asp-controller="Notifications" asp-action="Index" style="text-decoration:none">
			<div class="col">
				<div class="card radius-10 border-start border-0 border-3 border-primary">
					<div class="card-body">
						<div class="d-flex align-items-center">
							<div>
								<p class="mb-0 text-secondary">Notifications</p>
								<h4 class="my-1 text-warning">Notificatons</h4>
									<p style="color:black;" class="mb-0 font-13"> All Notifications</p>
							</div>
							<div class="widgets-icons-2 rounded-circle bg-gradient-blooker text-white ms-auto">
								<i class="fa fa-users"></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</a>
		</div>
	</div>
</div>