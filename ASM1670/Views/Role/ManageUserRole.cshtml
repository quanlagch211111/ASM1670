@model ASM1670.Models.ApplicationUser

@{
    ViewData["Title"] = "Manage User Role";
}

<h1>Manage User Role</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>User Information</h3>
            <p><strong>Email:</strong> @Model.Email</p>
                <strong>Current Roles:</strong>
                @foreach (var role in ViewBag.CurrentUserRoles)
                {
                    <span class="badge bg-primary">@role</span>
                }
            </p>
        </div>
        <div class="col-md-6">
            <h3>Update Role</h3>
            <form asp-action="UpdateUserRole" method="post">
                <div class="form-group">
                    <label for="selectedRole">Select Role:</label>
                    <select name="selectedRole" class="form-control">
                        @foreach (var role in ViewBag.AllRoles)
                        {
                            <option value="@role">@role</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update Role</button>
            </form>
        </div>
    </div>
</div>
